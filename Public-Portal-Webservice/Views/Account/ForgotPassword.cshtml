
@model Public_Portal_Webservice.Models.viewModel.vmPCP
@{
    ViewBag.Title = "forgot password";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";

}
<h4 style="color:red;" class="col-sm-4 col-sm-offset-4">
    @*@TempData["Status"].ToString()*@
</h4>

<div class="body"></div>
<div class="grad"></div>
<div class="header">
    <div>Password<span>Reset</span></div>
</div>
<br>
<div class="login">

    @*<h3 style="color:white">Password reset</h3>*@
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h5 style="color:white">Your Username</h5>
        @Html.EditorFor(model => model.acc.username, new { htmlAttributes = new { style = "max-width: 100%;", @class = "form-control", placeholder = "username" } })
        @Html.ValidationMessageFor(model => model.acc.username, "", new { @class = "text-danger" })

        <h4>
            @Html.ValidationMessage("AccountUserNotFound", new { @class = "text-danger", style = "font-size:30" })
            </h4>
        <br>
        <h4><a href="#" style="color:blue"></a></h4>
        <input type="submit" value="Submit" class="btn btn-default btn-block btn-success"><br />
        <h3>
            <a href="@Url.Action("Login", "Account")" style="color:dodgerblue">Back to login page</a>
        </h3>

    }
</div>
