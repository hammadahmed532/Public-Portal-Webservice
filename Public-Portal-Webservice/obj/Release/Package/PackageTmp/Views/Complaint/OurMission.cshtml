@using System.Web.UI.WebControls;
@{
    ViewBag.Title = "Our Mission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page content -->

<div id="restBody" class="container body-content">

    <img src="~/Content/complaintPictures/karachi-cover.jpg" width="100%" height="250" />
    <div style="padding-left:15px;padding-right:15px;padding-top:20px">
        <h3>Our Mission</h3>
        <div class="topElement">
            <h4>Our portal will help to reduce the gap between the public and Union Council members. To let them know which problems the people are facing the most</h4>
        </div>
        <hr />
        <div class="SecondElement">
            <h3>Motive</h3>
            <h4>
                Most poeple are unaware of the work the government does in their area, and the goverment is unaware of the problems we face daily, this portal will
                display the problems people face in their respective Union Council area
            </h4>

        </div>
        <hr />
        <div class="ThirdElement">
            <h3>Help Us</h3>
            <h4>
                Help us in by registering complaint of a problem in your area, without your help the government won't know of the problems you face
            </h4>

        </div>

    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Public Complaint Portal</p>
    </footer>
</div>
